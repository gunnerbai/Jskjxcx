/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast_show {
  height: 100%;
  width: 100%;
  position: fixed;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}
.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast__bd {
	opacity: 0;
  /* border: 3px solid black; */
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 10000;
    min-width: 500px;
    min-height: 500px;
    max-width: 70%;
    top: 0;
    left: 50%;
    padding: 15px;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
}
.wetoast__bd__img {
	margin-top: 3px;
}
.wetoast__bd__img_desc {
    width: 500px;
    height: 500px;
    
}
.wetoast__bd__title {
	margin: 3px 0;
	font-size: 1.2em;
}